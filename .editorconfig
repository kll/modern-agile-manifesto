root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.md]
# Preserve intentional two-space line breaks in Markdown
trim_trailing_whitespace = false
indent_size = 2

[*.yml]
indent_size = 2

[*.yaml]
indent_size = 2

[*.{html,css,js,rb}]
indent_size = 2

